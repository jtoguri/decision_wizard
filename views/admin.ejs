<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ðŸ§™ Decision Wizard: Poll Administrative Page</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/wizard.css" type="text/css" />

    <!-- Link to fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Bowlby+One&family=Jost&family=Permanent+Marker&family=Raleway:wght@800&display=swap" rel="stylesheet">

    <!-- Link to fontsawesome (icons) -->
    <script
      src="https://kit.fontawesome.com/ebefa7c07e.js"
      crossorigin="anonymous"
    ></script>

    <!-- <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css" type="text/css" /> -->
    <link
      href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script type="text/javascript" src="/scripts/vote-submission.js"></script>
  </head>

  <body id="flex1">
    <%- include('partials/_header') %>


    <div id="vertical">
      <!-- POLL RESULTS -->
      <div id="pollResults">
        <h1 id="pollh1">Poll Results</h1>
        <table id="resultsTable">
          <caption><%= poll.question %></caption>
          <thead>
            <tr>
              <th class="tableHeading" scope="col">Choices</th>
              <th class="tableHeading" scope="col">SCORE</th>
            </tr>
          </thead>
          <% for (let i = 0; i < results.length; i++) { %>
            <% if (i === 0) { %>
              <tr class="optionInTheLead">
            <% } else { %>
              <tr>
            <% } %>
              <td><%= results[i].title %></td>
              <td><%= Number(results[i].score) %></td>
              </tr>
          <% } %>
        </table>

        <p><span class="highlightColor highlightBold">*</span> Results
        displayed are not final.<br>This poll ends on <span
        class="highlightColor highlightBold">
          <%= poll.end_date.toDateString() %></span>.</p>
      </div>

      <!-- SHARE POLL LINK -->
      <div id="sharePoll">
        <h3>Share This Poll:</h3>

        <div>
          <p class="shareLink">localhost:8080/<%= poll.submission_link %><p/>
          <i id="shareIcon" class="fa-solid fa-link"></i>
          </div>
      </div>
    </div>



    <!-- PREVIEW OF POLE -->
    <div id="preview">
      <div id="previewLabel">
        <p><span id="prevText">PREVIEW OF POLL</spa></p>
      </div>
      <div class="">
        <h2 id="questionString"><%= poll.question %></h2>

        <p id="instructions">
          <i id="hand" class="fa-regular fa-hand"></i> Drag and drop to rank the
          options <br />(<span id="firstChoice">1st</span> choice at the top, last
          choice at the bottom)
        </p>

        <div id="dragAndDrop" class="d-flex justify-content-center my-4">
            <ol id="sortable" class="ui-sortable list-group">
              <% for (const choice of results) { %>
              <li
                class="ui-sortable-handle list-group-item"
              >
                <%= choice.title %>
              </li>
              <% } %>
            </ol>
        </div>
      </div>
    </div>

  </body>
</html>

