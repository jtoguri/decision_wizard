<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ðŸ§™ Decision Wizard</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3    "
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/wizard.css" type="text/css" />

    <!-- Link to fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Bowlby+One&family=Jost:wght@400;800&family=Permanent+Marker&family=Raleway:wght@800&display=swap"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body id="myPolls">
    <%- include('partials/_header') %>

    <div class="containerAll">
      <h1 id="usersPolls"><%= name %>'s Polls</h1>

      <!-- ACTIVE POLLS -->
      <h3 class="pollsActivePast">Active Polls</h3>
      <div class="pollContainer">
        <% if (activePolls.length === 0) { %>
          <p>No active polls.</p>
        <% } %>
        <% for (const poll of activePolls) { %>
        <div class="poll">
          <div class="topPortion activePoll">
            <h4><%= poll.question %></h4>
          </div>
          <div class="bottomPortion">
            <% const created = poll.created_at.toDateString() %>
            <p class="smallText">Created on:</p>
            <div class="centerHorizontally">
              <p class="date"><%= created %></p>
              <p class="link">
                <a
                  href="http://localhost:8080/<%= poll.admin_link %>"
                  class="link"
                  >View Poll</a
                >
              </p>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <!-- PAST POLLS -->

      <h3 class="pollsActivePast">Past Polls</h3>
      <div class="pollContainer">
        <% if (completedPolls.length === 0) { %>
          <p>No completed polls.</p>
        <% } %>
        <% for (const poll of completedPolls) { %>
        <div class="poll">
          <div class="topPortion pastPoll">
            <h4><%= poll.question %></h4>
          </div>
          <div class="bottomPortion">
            <% const ended = poll.end_date.toDateString() %>
            <span class="smallText">Ended on:</span>
            <div class="centerHorizontally">
              <p class="date"><%= ended %></p>
              <p class="link">
                <a href="http://localhost:8080/<%= poll.admin_link %>"
                  >View Poll</a
                >
              </p>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
