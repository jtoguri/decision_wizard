<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ðŸ§™ Decision Wizard</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3    "
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/wizard.css" type="text/css" />

    <!-- Link to fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bowlby+One&family=Jost&family=Perma    nent+Marker&family=Raleway:wght@800&family=Voltaire&display=swap"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body id="myPolls">
    <%- include('partials/_header') %>

    <h1><%= user %>'s Polls</h1>
    <!-- ACTIVE POLLS -->
    <div class="pollContainer">
      <h2>Active Polls</h2>
      <% for (const poll of activePolls) { %>
      <div class="poll">
        <div class="topActive">
          <h4><%= poll.question %></h4>
        </div>
        <div class="bottomPortion">
          <% const created = poll.created_at.toDateString() %> <% const
          createdDate = created.split(' ').slice(0, 3).join(' ') %>
          <span>Created on: <%= createdDate %></span>
          <a href="http://localhost:8080/<%= poll.admin_link %>">View Poll</a>
          <% } %>
        </div>
      </div>
    </div>
    <!-- end of active polls -->

    <!-- PAST POLLS -->
    <div>
      <h2>Past Polls</h2>
      <% for (const poll of completedPolls) { %>
      <h4><%= poll.question %></h4>
      <p>Winner: Y</p>
      <% const closed = poll.closed_at.toDateString() %> <% const closedDate =
      closed.split(' ').slice(0, 3).join(' ') %>
      <span>Closed on: <%= closedDate %></span>
      <a href="http://localhost:8080/<%= poll.admin_link %>">View Poll</a>
      <% } %>
    </div>
  </body>
</html>
