    <!-- GET POLL DETAILS -->
    <form id="pollForm" class="form" action="/api/polls" method="post">
      <div class="mb-3">
        <h1>Help me decide...</h1>
        <input class="form-control" type="text" name="pollQuestion" placeholder="Where should we eat tonight?"
          required />
      </div>

      <div id="optionsContainer">
        <div class="someOpts">

          <h5>Now, add some options...</h5>

        </div>

        <!-- OPTION 1 -->
        <div class="input-group option">
          <input class="form-control" type="text" name="choices[choice1][title]" placeholder="The hot dog stand"
            required />
          <input class="form-control" type="text" name="choices[choice1][describe]"
            placeholder="it's good and cheap" /><br />
          <button class="btn btn-outline-secondary btn-sm removeOption" type="button"> - </button><br>
        </div>

        <!-- OPTION 2 -->
        <div class="input-group option">
          <input class="form-control" type="text" name="choices[choice2][title]" placeholder="Red Lobster" required />
          <input class="form-control" type="text" name="choices[choice2][describe]"
            placeholder="Close to the office" /><br />
          <button class="btn btn-outline-secondary btn-sm removeOption" type="button"> - </button><br>
        </div>

        <!-- OPTION 3 -->
        <div class="input-group option">
          <input class="form-control" type="text" name="choices[choice3][title]" placeholder="Old McDonalds" required />
          <input class="form-control" type="text" name="choices[choice3][describe]" placeholder="Tiny cheeseburgers" />
          <button class="btn btn-outline-secondary btn-sm removeOption" type="button"> - </button>
        </div>

      </div>

      <!-- ADD ADDITIONAL OPTIONS -->
      <div class="d-flex justify-content-center my-2">
        <button class="btn btn-primary btn-sm addOption" type="submit"> Add more </button>
        <!-- <input type="submit" class="btn btn-primary btn-sm addOption" type="submit" value="more"> -->
      </div>

      </div>

    <div id="pollPreview">

      <input type="submit" class="btn btn-info btn-lg" type="submit" value="Preview Poll">
    </div>
    </form>

