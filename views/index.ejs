<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ðŸ§™ Decision Wizard</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/wizard.css" type="text/css" />

    <!-- Link to fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bowlby+One&family=Jost&family=Permanent+Marker&family=Raleway:wght@800&family=Voltaire&display=swap"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app-helpers.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <br />

    <!-- GET POLL DETAILS -->
    <form id="pollForm" class="form" action="/api/polls" method="post">
      <div class="mb-3">
        <h1 id="helpDecide">Help me decide...</h1>
        <input
          class="form-control"
          type="text"
          name="pollQuestion"
          placeholder="Where should we eat tonight?"
          required
        />
      </div>
        
      <div class="mt-5">
        <h5 id="addOptions">Now, add some options...</h5>
      </div>
      
      <div id="optionsContainer">
        
        <div class="input-group">
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice1][title]"
            placeholder="The hot dog stand"
            required
          />
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice1][describe]"
            placeholder="it's good and cheap"
          /><br />
          <button
            class="btn btn-outline-secondary btn-sm removeOption"
            type="button"
          >
            x
          </button>
          <br />
        </div>

        <div class="input-group">
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice2][title]"
            placeholder="Red Lobster"
            required
          />
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice2][describe]"
            placeholder="Close to the office"
          /><br />
          <button
            class="btn btn-outline-secondary btn-sm removeOption"
            type="button"
          >
            x</button
          ><br />
        </div>

        <div class="input-group">
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice3][title]"
            placeholder="Old McDonalds"
            required
          />
          <input
            class="form-control noRightBorder"
            type="text"
            name="choices[choice3][describe]"
            placeholder="Tiny cheeseburgers"
          />
          <button
            class="btn btn-outline-secondary btn-sm removeOption"
            type="button"
          >
            x
          </button>
        </div>
      </div>

      <!-- ADD ADDITIONAL OPTIONS -->
      <div class="d-flex justify-content-end my-3">
        <button
          id="addMoreOptionsButton"
          class="btn btn-outline-info btn-sm addOption"
          type="button"
        >
          Add More Options
        </button>
      </div>

      <!-- Check for a logged in user -->

      <!-- <div id="userInfo" class="d-none row g-1 justify-content-between"> -->
      <div id="userInfo" class="d-flex row g-1 justify-content-between">
        <div class="col w-50">
          <label for="name" class="form-label form-label-sm">Your Name:</label>
          <input
            type="text"
            class="form-control form-control-sm"
            id="user[name]"
            name="user[name]"
            placeholder="Fjord Windstar"
          />
        </div>

        <div class="col w-50">
          <label for="email" class="form-label form-label-sm">Email:</label>
          <input
            type="email"
            class="form-control form-control-sm"
            id="user[email]"
            name="user[email]"
            placeholder="fjord@windstar.com"
          />
        </div>
      </div>

      <div id="pollPreview" class="d-flex justify-content-center my-4">
        <input
          id="previewPoll"
          type="submit"
          class="btn btn-warning btn-lg"
          type="submit"
          value="Preview Poll"
        />
        <!-- <p>PREVIEW OF POLL GOES HERE</p> -->
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
