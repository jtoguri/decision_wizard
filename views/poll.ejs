    <!-- USER RANKS CHOICES -->

    <div class="container d-flex flex-column align-items-center">

      <!-- <h1>Welcome to Decision Wizard</h1> -->
      <!-- <h2>CREATOR NAME needs your help making a decision:</h2> -->

      <h2 id="questionString">
        <%= poll.question %>
      </h2>

      <p id="instructions">
        <i id="hand" class="fa-regular fa-hand"></i>  Drag and drop to rank the options <br>(<span id="firstChoice">1st</span> choice at the top, last choice at the bottom)
      </p>

      <div id = "dragAndDrop" class="d-flex justify-content-center my-4">
        <form class="form" id= "voteSubmit" action="/api/polls/:id" method="post">
          <ol id="sortable" class="ui-sortable list-group">
            <% for (let i = 0; i < poll.choices.length; i++) { %>
              <li id="choice_<%= poll.ids[i] %>" class="ui-sortable-handle list-group-item">
                <%= poll.choices[i] %>
              </li>
              <% } %>
          </ol>
      </div>
      <div id="pollPreview" class="d-flex justify-content-center my-4">
        <input
          id="submitPoll"
          type="submit"
          class="btn btn-warning btn-lg"
          type="submit"
          value="Submit Poll"
        />

      <!-- <div class="d-flex justify-content-center my-4">
