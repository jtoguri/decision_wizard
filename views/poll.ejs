<!-- ADMIN PAGE -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ðŸ§™ Decision Wizard</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/wizard.css" type="text/css" />

    <!-- Link to fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bowlby+One&family=Jost&family=Permanent+Marker&family=Raleway:wght@800&family=Voltaire&display=swap"
      rel="stylesheet"
    />
    <!-- Link to fontsawesome (icons) -->
    <script
      src="https://kit.fontawesome.com/ebefa7c07e.js"
      crossorigin="anonymous"
    ></script>

    <!-- <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/smoothness/jquery-ui.css" type="text/css" /> -->
    <link
      href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css"
      rel="stylesheet"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script type="text/javascript" src="/scripts/vote-submission.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <br />

    <h1>Poll Results</h1>
    <div>
      <table class="roundedCorners">
        <caption>* Results displayed are not final.</caption>
        <caption>This poll ends on Sat May 7th.</caption>
        <thead>
          <tr>
            <th scope="col"></td>
            <th scope="col">SCORE</td>
          </tr>
        </thead>
        <tr>
          <td>Hot Dog Stand</td>
          <td>37</td>
        </tr>
        <tr>
          <td>Red Lobster</td>
          <td>23</td>
        </tr>
        <tr>
          <td>McDonald's</td>
          <td>3</td>
        </tr>
      </table>

      Results displayed are not final This poll ends on Sat May 7th
    </div>
    <div>
      Preview of Poll Poll question Drag and drop to rank the options (1st
      choice at the top, last choice at the bottom) Red Lobster McDonald's Hot
      Dog Stand
    </div>
    <div>Share This Poll: Link</div>
    <div>Delete Poll</div>

    <div class="form">
      <ol>
        <% for (const choice of choices) { %>
        <li
          id="choice_<%= choice.id %>"
          class="ui-sortable-handle list-group-item"
        >
          <%= choice.title %>
        </li>
        <% } %>
      </ol>
    </div>

    <div class="table-responsive">
      <table class="table">
        <caption>
          List of users
        </caption>
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- USER RANKS CHOICES -->

    <div class="container d-flex flex-column align-items-center">
      <h2 id="questionString"><%= poll.question %></h2>

      <p id="instructions">
        <i id="hand" class="fa-regular fa-hand"></i> Drag and drop to rank the
        options <br />(<span id="firstChoice">1st</span> choice at the top, last
        choice at the bottom)
      </p>

      <div id="dragAndDrop" class="d-flex justify-content-center my-4">
        <form
          class="form"
          id="voteSubmit"
          action="/api/polls/:id"
          method="post"
        >
          <ol id="sortable" class="ui-sortable list-group">
            <% for (const choice of choices) { %>
            <li
              id="choice_<%= choice.id %>"
              class="ui-sortable-handle list-group-item"
            >
              <%= choice.title %>
            </li>
            <% } %>
          </ol>

          <div id="pollPreview" class="d-flex justify-content-center my-4">
            <input
              id="submitPoll"
              type="submit"
              class="btn btn-warning btn-lg"
              type="submit"
              value="Submit Poll"
            />
          </div>
        </form>
      </div>
    </div>
  </body>
</html>

<!-- templateVars = { poll: { question }, choices -->
